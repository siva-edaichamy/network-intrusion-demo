# ============================================
# Tanzu Data Intelligence Demo Configuration
# ============================================
# Copy this file to .env and fill in your actual credentials
# cp .env.example .env

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_HOST=your-rabbitmq-host.com
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=your_username
RABBITMQ_PASSWORD=your_password
RABBITMQ_VHOST=/

# ============================================
# Greenplum Database Configuration
# ============================================
GREENPLUM_HOST=your-greenplum-host.com
GREENPLUM_PORT=5432
GREENPLUM_DATABASE=your_database
GREENPLUM_USER=gpadmin
GREENPLUM_PASSWORD=your_password
GREENPLUM_SCHEMA=public
GREENPLUM_TABLE=kdd_data_demo

# ============================================
# Gemfire Configuration
# ============================================
GEMFIRE_PUBLIC_IP=your-gemfire-ip.com
GEMFIRE_REST_PORT=8080
GEMFIRE_LOCATOR=localhost[10334]
GEMFIRE_MODEL_REGION=MLModels
GEMFIRE_MODEL_KEY=kdd_intrusion_model_v1

# Optional: SSH access for Gemfire region creation
GEMFIRE_SSH_HOST=your-gemfire-ssh-host.com
GEMFIRE_SSH_USER=your_ssh_user
GEMFIRE_SSH_KEY_PATH=/path/to/your/ssh/key.pem

# ============================================
# GPSS (Greenplum Streaming Server) Configuration
# ============================================
GPSS_HOST=127.0.0.1
GPSS_PORT=5000
GPSS_JOB_NAME=load_kdd
GPSS_REMOTE_DIR=/home/gpadmin/gpss

# Optional: SSH access for GPSS operations
GPSS_SSH_HOST=your-gpss-ssh-host.com
GPSS_SSH_USER=gpadmin
GPSS_SSH_KEY_PATH=/path/to/your/ssh/key.pem

# ============================================
# Dataset Paths
# ============================================
# Training dataset (for model training)
KDD_DATASET_TRAINING_PATH=./data/kdd_cup_data_history.csv

# Simulation dataset (for demo/simulation)
KDD_DATASET_SIMULATION_PATH=./data/kdd_cup_data_stream.csv

# ============================================
# Web Server Configuration
# ============================================
WEB_PORT=8080
WEBSOCKET_PORT=8765
